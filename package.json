{
  "name": "local-library",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "serveapp": "npm run css && node ./bin/www",
    "devstart": "nodemon --exec \"npm run serveapp\"",
    "start": "DEBUG=local-library:* npm run devstart",
    "css": "npx tailwindcss build ./public/stylesheets/style.css -o ./public/stylesheets/main.css"
  },
  "nodemonConfig": {
    "ignore": [
      "public/stylesheets/main.css"
    ],
    "ext": "js,hbs,css"
  },
  "dependencies": {
    "async": "^3.2.0",
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "dotenv": "^8.2.0",
    "express": "~4.15.2",
    "express-handlebars": "^5.2.0",
    "handlebars": "^4.7.6",
    "handlebars-helpers": "^0.10.0",
    "mongoose": "^5.10.11",
    "morgan": "~1.8.1",
    "serve-favicon": "~2.4.2",
    "tailwindcss": "^1.9.6"
  },
  "devDependencies": {
    "nodemon": "^2.0.6"
  }
}
